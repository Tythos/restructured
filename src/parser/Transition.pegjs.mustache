Transition =
  BlankLines? // TODO(seikichi): refactor handling of blanklines
  marker:TransitionMarker Whitespace* Newline
  &(BlankLines) {
    return new Elements.Transition({}).location(location, options);
  }

TransitionMarker =
  line:('!' / '"' / '#' / '$' / '%' / '&'/ "'" / '(' / ')' /
        '*' / '+' / ',' / '-' / '.' / '/' / ':' / ';' / '<' /
        '=' / '>' / '?' / '@' / '[' / '\\' / ']' / '^' / '_' /
        '`' / '{' / '|' / '}' / '~')+ &{
    return line.length >= 4 && _.uniq(line).length === 1
  } {
    return line;
  }
